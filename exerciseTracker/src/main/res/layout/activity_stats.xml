<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/default_gap"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_detail_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!-- 1st row -->

        <TextView
            android:id="@+id/activity_detail_lblActivityStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_stats"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <!-- 2nd row -->

        <TextView
            android:id="@+id/activity_detail_tvExerciseLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/activity_detail_lblActivityStats"
            android:hint="@string/hint_activity_at_location"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonfooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <Button
            android:id="@+id/activity_stats_stop_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:text="@string/stop"
            android:visibility="visible" />

        <!-- android:layout_toRightOf="@+id/activity_stats_stop_restart" -->

        <!--<Button
            android:id="@+id/activity_stats_show_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:text="@string/map"
            android:visibility="visible" />
            -->

        <!-- android:layout_toRightOf="@+id/activity_stats_show_map" -->

        <Button
            android:id="@+id/activity_stats_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:text="@string/cancel" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_detail_section"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonfooter"
        android:layout_below="@+id/activity_detail_header">

        <ListView
            android:id="@+id/activity_detail_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:isScrollContainer="true"
            android:padding="@dimen/default_gap"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabMap"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:scaleType="center"
        app:backgroundTint="@color/fab_background"
        android:src="@drawable/ic_device_gps_fixed"
        app:elevation="4dp"
        android:visibility="gone"/>

</RelativeLayout>


