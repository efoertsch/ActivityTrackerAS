<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fisincorporated.ExerciseTracker"
    android:installLocation="auto"
    android:versionCode="13"
    android:versionName="1.5.7" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="true" />

    <permission
        android:name="com.fisincorporated.ExerciseTracker.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="com.fisincorporated.ExerciseTracker.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:theme="@style/Theme.MyTheme"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.fisincorporated.ExerciseTracker.FunctionListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.fisincorporated.ExerciseTracker.StartExercise" />
        <activity android:name="ActivityList" />
        <activity android:name="ActivityPager" />
        <activity android:name="ActivityLogger" />
        <activity android:name="ActivityMap" />
        <activity android:name="ActivityChart" />
        <activity android:name="ExerciseList" />
        <activity android:name="ExercisePager" />
        <activity android:name="ExerciseMaintenance" />
        <activity android:name="ProgramOptions" />
        <activity android:name="AboutActivityTracker" />
        <activity android:name="BackupRestore" />
        <activity android:name="com.fisincorporated.facebook.FacebookPostStatsActivity" />
        <activity android:name="com.facebook.FacebookActivity"
          android:configChanges=
                 "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
          android:theme="@android:style/Theme.Translucent.NoTitleBar"
          android:label="@string/app_name" />

        <receiver
            android:name="com.fisincorporated.broadcastreceiver.LocationReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.fisincorporated.ExerciseTracker.ACTION_LOCATION" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <!--  needed for uploading content such as photos -->
        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider682608938461276"
            android:exported="true" />
		<!--  needed for uploading content such as photos -->
        <receiver android:name="com.fisincorporated.facebook.ExerciseTrackerFacebookBroadcastReceiver" >
            <intent-filter>
                <action android:name="com.facebook.platform.AppCallResultBroadcast" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/GoogleMapsKeyTest" />
    </application>

</manifest>