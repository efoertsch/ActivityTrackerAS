<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/prior_activity_delete_list" >

    <RelativeLayout
        android:id="@+id/prior_activity_delete_columns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/prior_activity_delete_list_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/prior_activity_delete_list_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/prior_activity_delete_list_activity"
            android:text="@string/location"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/prior_activity_delete_list_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/delete"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:id="@+id/buttonfooter"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/prior_activity_delete_list_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/prior_activity_delete_list_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:enabled="false"
            android:text="@string/delete" />
    </RelativeLayout>
    
    
    <ListView
        android:id="@id/android:list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prior_activity_delete_columns"
        android:layout_above="@id/buttonfooter" 
        android:clickable="true"
        android:divider="#fff"
        android:dividerHeight="@dimen/ts1sp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:isScrollContainer="true"
        android:padding="@dimen/margin_double"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical" />
  <TextView
        android:id="@+id/empty_activity_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_below="@+id/prior_activity_delete_columns"
        android:visibility="gone"
        android:text="@string/no_activities_to_display" />
    
</RelativeLayout>