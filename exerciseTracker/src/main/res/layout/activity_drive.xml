<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.fisincorporated.exercisetracker.ui.drive.DriveActivity">

    <Button
        android:id="@+id/driveBackupButton"
        style="@style/standard_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_quadruple"
        android:drawableLeft="@drawable/ic_backup"
        android:text="Backup to your Google Drive"
        />

    <Button
        android:id="@+id/driveRestoreButton"
        style="@style/standard_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_quadruple"
        android:drawableLeft="@drawable/ic_restore"
        android:text="Restore from Google Drive"/>

    <include layout="@layout/divider_vertical"/>

    <Button
        android:id="@+id/localBackupButton"
        style="@style/standard_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_quadruple"
        android:drawableLeft="@drawable/ic_backup"
        android:text="Backup locally"/>

    <Button
        android:id="@+id/localRestoreButton"
        style="@style/standard_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_quadruple"
        android:drawableLeft="@drawable/ic_restore"
        android:text="Restore from Local"/>


</LinearLayout>


