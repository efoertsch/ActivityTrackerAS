<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="standard_display">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="facebook_btn">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
         <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/com_facebook_button_blue</item>
    </style>

    <!--  the following was to fix a bug where autocompletetext was white on white when focus shifted
      out of the text view but caused a problem in +3.0(?) with newer themes. -->
    <style name="AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Widget.DropDownItemLight" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    
    <style name="Divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1px</item>
    <item name="android:background">@color/colorAccent</item>
</style>

    <style name="AppTheme.NoActionBar.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
